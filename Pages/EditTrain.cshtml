@page "{trainId:int}"
@model lab_5.Pages.TrainsModel


@{
    ViewData["Title"] = "Trains";
    //Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Edit Train</title>
</head>

<body>
    <div class='container'>
        <h2>Edit train</h2>
        <form action="" method="post">
            <ul class='responsive-table'>
                <li class='table-row'>
                    <div class='col col-1' data-label='Station Id'>
                        @*@Model.TrainId*@
                    </div>
                    <div class='col col-2' data-label='Train'>
                        <input type="text" name="Train" value="Train" asp-for="train.Train">
                    </div>
                    <div class='col col-2' data-label='TrainType'>
                        <input type="text" name="TrainType" value="TrainType" asp-for="train.TrainType">
                    </div>
                    <div class='sub' data-label='Submit'>
                        <input asp-page="EditTrain" 
                               type="submit" value="Change" class="btn btn-success" required>
                    </div>



                </li>
            </ul>
        </form>
    </div>

</body>
</html>

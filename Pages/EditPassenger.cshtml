@page "{passengerId:int}"
@model lab_5.Pages.PassengersModel
@{
    ViewData["Title"] = "Passangers";
    //Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Edit Passanger</title>
</head>

<body>
    <div class='container'>
        <h2>Edit passanger's info</h2>
        <form action="" method="post">
            <ul class='responsive-table'>
                <li class='table-row'>
                    @*<div class='col col-1' data-label='Passenger Id'>
                        <input readonly="readonly" asp-for="passenger.PassengerId" type="text" />
                    </div>*@
                    <div class='col col-2' data-label='FullName'>
                        <input type="text" name="FullName" value="FullName" asp-for="passenger.FullName">
                    </div>
                    <div class='col col-2' data-label='Address'>
                        <input type="text" name="Address" value="Address"  asp-for="passenger.Address">
                    </div>
                    <div class='col col-3' data-label='Phone'>
                        <input type="text" name="Phone" value="Phone"  asp-for="passenger.Phone">
                    </div>
                    <div class='sub' data-label='Submit'>
                        <input asp-page-handler="EditPassenger" 
                               type="submit" value="Change" class="btn btn-success" required>
                    </div>

                </li>
            </ul>
        </form>
    </div>



</body>
</html>
